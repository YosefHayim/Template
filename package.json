{
	"name": "{{PROJECT_NAME}}",
	"version": "0.1.3",
	"description": "{{PROJECT_DESCRIPTION}}",
	"type": "module",
	"license": "MIT",
	"author": "{{AUTHOR}}",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/{{OWNER}}/{{PROJECT_NAME}}.git"
	},
	"keywords": [],
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"files": ["dist"],
	"engines": {
		"node": ">=22.0.0"
	},
	"scripts": {
		"dev": "echo \"Define your dev server command here\"",
		"build": "tsc --build",
		"start": "node dist/index.js",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"format": "biome format --write .",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --ui",
		"typecheck": "tsc --noEmit",
		"validate": "npm run typecheck && npm run check && npm run test",
		"prepare": "husky"
	},
	"dependencies": {
		"glob": "^13.0.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.0",
		"@commitlint/cli": "^19.0.0",
		"@commitlint/config-conventional": "^19.0.0",
		"@vitest/coverage-v8": "^3.0.0",
		"@vitest/ui": "^3.0.0",
		"husky": "^9.0.0",
		"lint-staged": "^15.0.0",
		"typescript": "^5.7.0",
		"vitest": "^3.0.0"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx,json,css,md}": [
			"biome check --write --no-errors-on-unmatched"
		]
	}
}
